        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="1.jpg" Opacity="0.9"/>
        </Grid.Background>
        <Label Content="Hello World" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button Content="Go To New Page" HorizontalAlignment="Left" Margin="43,318,0,0" VerticalAlignment="Top" Width="75" OpacityMask="#FFD02525" Opacity="0.3" Click="Button_Click"/>
        <Button x:Name="Button2" Content="Click me too" HorizontalAlignment="Left" Margin="157,318,0,0" VerticalAlignment="Top" Width="75" Click="Button2_Click"/>

    </Grid>
